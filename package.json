{
  "name": "webpack-starter",
  "version": "1.0.0",
  "description": "Simple boilerplate including Yarn, webpack, Babel, ESLint, Sass, and other useful loaders and linters.",
  "main": "index.js",
  "repository": "https://github.com/gabrielecanepa/webpack-starter",
  "author": "Gabriele Canepa <hey@gabrielecanepa.com>",
  "license": "MIT",
  "scripts": {
    "setup": "/bin/bash ./.bin/install",
    "start": "webpack-dev-server",
    "dev": "webpack-dev-server --mode development",
    "build": "webpack build --mode production",
    "lint": "eslint \"./src/**/*{.mjs,.js,.jsx}\" && stylelint \"./src/**/*.{css,scss,sass}\""
  },
  "devDependencies": {
    "@babel/core": "^7.17.10",
    "@babel/eslint-parser": "^7.17.0",
    "@babel/preset-env": "^7.17.10",
    "babel-loader": "^8.2.5",
    "css-loader": "^6.7.1",
    "dotenv-webpack": "^7.1.0",
    "eslint": "^8.15.0",
    "eslint-plugin-import": "^2.26.0",
    "html-loader": "^3.1.0",
    "html-webpack-plugin": "^5.5.0",
    "node-sass": "^7.0.1",
    "sass-loader": "^12.6.0",
    "style-loader": "^3.3.1",
    "stylelint": "^14.8.2",
    "stylelint-config-recommended-scss": "^6.0.0",
    "stylelint-scss": "^4.2.0",
    "webpack": "^5.72.1",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.9.0"
  }
}
